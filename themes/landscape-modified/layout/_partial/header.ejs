<header id="header" <% if (page.featured_image) { %>class="has-bg"<% } %>>
  <% if (page.featured_image) { %>
    <div id="banner" style="background-image: url(<%- url_for(image_version(page.featured_image, {prefix: 'big'})) %>);"></div>
  <% } else { %>
    <div id="banner"></div>
  <% } %>
  <div id="header-outer" class="outer">
    <div id="header-inner" class="inner">
      <nav id="main-nav">
        <a id="main-nav-toggle" class="nav-icon">
            <%- fa_inline('bars') %>
        </a>
        <a href="<%- url_for('/') %>" id="logo">
            <%- partial('images/logo.svg') %>
        </a>
        <% for (var i in theme.menu){ %>
          <a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
        <% } %>
      </nav>
      <nav id="sub-nav">
        <a id="nav-search-btn" class="nav-icon" title="<%= __('search') %>">
          <%- fa_inline('search') %>
        </a>
      </nav>
      <div id="search-form-wrap">
        <%- search_form({button: '&#x21E8;'}) %>
      </div>
    </div>
  </div>
</header>
